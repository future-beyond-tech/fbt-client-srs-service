# Dev image: SDK + wkhtmltopdf for dotnet watch run with source mounted at /app
FROM mcr.microsoft.com/dotnet/sdk:8.0-bookworm-slim
WORKDIR /app

RUN apt-get update \
    && apt-get install -y --no-install-recommends wkhtmltopdf \
    && rm -rf /var/lib/apt/lists/*

ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Development
EXPOSE 8080

# Source is mounted via docker-compose; no COPY
# Default command: dotnet watch run (set in compose)
